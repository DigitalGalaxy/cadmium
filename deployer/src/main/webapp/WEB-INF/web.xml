<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Cadmium Deployment War</display-name> 
  
  <listener>
    <listener-class>com.meltmedia.cadmium.deployer.JGroupsMessagingListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>Deployer</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.meltmedia.cadmium.deployer</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>Deployer</servlet-name>
    <url-pattern>/system/*</url-pattern>
  </servlet-mapping>
   
</web-app>
